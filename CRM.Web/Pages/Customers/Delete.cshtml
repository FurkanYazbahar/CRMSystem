@page "{id:guid}"
@model CRM.Web.Pages.Customers.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h5>Are you sure you want to delete this customer?</h5>

<div class="mb-3">
    <strong>Name:</strong> @Model.Customer.FirstName @Model.Customer.LastName <br />
    <strong>Email:</strong> @Model.Customer.Email <br />
    <strong>Region:</strong> @Model.Customer.Region <br />
    <strong>Registered:</strong> @Model.Customer.RegistrationDate.ToShortDateString()
</div>

<form method="post">
    <input type="hidden" asp-for="Customer.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
