@page "{id:guid}"
@model CRM.Web.Pages.Customers.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Customer";
}

<h2>Edit Customer</h2>

<form method="post" class="mt-4">
    <input type="hidden" asp-for="Customer.Id" />

    <div class="mb-3">
        <label asp-for="Customer.FirstName" class="form-label"></label>
        <input asp-for="Customer.FirstName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Customer.LastName" class="form-label"></label>
        <input asp-for="Customer.LastName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Customer.Email" class="form-label"></label>
        <input asp-for="Customer.Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Customer.Region" class="form-label"></label>
        <input asp-for="Customer.Region" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Customer.RegistrationDate" class="form-label"></label>
        <input asp-for="Customer.RegistrationDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
