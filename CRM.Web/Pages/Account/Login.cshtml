@page
@{
    Layout = "_MinimalLayout";
}
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="login-form-container">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Login Form</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <input asp-for="Input.UserName" class="form-control" placeholder="Username" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" />
                                <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                            </div>
                            <a href="/" class="text-primary">Forgot password?</a>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </div>

                    <div class="mt-3 text-center">
                        <p>Not a member? <a href="/Account/Register" class="text-primary">Signup now</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .login-form-container {
            max-width: 400px;
            margin: 2rem auto;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        .card-header {
            background: linear-gradient(135deg, #6B5EE5 0%, #A85CF9 100%);
            color: white;
            border-radius: 10px 10px 0 0 !important;
            padding: 1.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .form-control {
            padding: 0.75rem 1rem;
            border-radius: 5px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #6B5EE5 0%, #A85CF9 100%);
            border: none;
            padding: 0.75rem;
            border-radius: 5px;
        }

            .btn-primary:hover {
                opacity: 0.9;
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 